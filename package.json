		"url": "https://dave.io"
	},
	"type": "module",
	"scripts": {
		"build": "pnpm type-check && pnpm build-only",
		"build-only": "pnpm vite build",
		"deploy": "pnpm build && pnpm wrangler pages deploy ./dist",
		"dev": "pnpm vite",
		"format": "pnpm prettier --write src/",
		"lint": "pnpm lint:eslint && pnpm lint:oxlint",
		"lint:eslint": "pnpm eslint . --fix",
		"lint:oxlint": "pnpm oxlint . --fix -D correctness --ignore-path .gitignore",
		"preview": "pnpm build && pnpm wrangler pages dev ./dist",
		"test:e2e": "pnpm nightwatch tests/e2e/*",
		"test:unit": "pnpm vitest",
		"type-check": "pnpm vue-tsc --build"
	},

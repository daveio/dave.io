		"@pinegrow/vite-plugin": "3.0.68",
		"@tsconfig/node22": "22.0.0",
		"@types/jsdom": "21.1.7",
		"@types/node": "22.10.2",
		"@unocss/preset-icons": "0.65.3",
		"@vitejs/plugin-vue": "5.2.1",

{
  "name": "dave.io",
  "packageManager": "yarn@4.0.2",
  "private": true,
  "author": "Dave Williams <dave@dave.io>",
  "browserslist": "> 1%, last 2 versions, not dead",
  "description": "dave.io codebase",
  "eslintConfig": {
    "ecmaFeatures": {
      "jsx": true
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "standard-with-typescript"
    ],
    "globals": {
      "document": true,
      "navigator": true,
      "window": true
    },
    "ignorePatterns": [
      "tmp/**"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "project": "./tsconfig.json",
      "sourceType": "module"
    }
  },
  "license": "All Rights Reserved",
  "prettier": {
    "overrides": [],
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "repository": "https://github.com/daveio/dave.io",
  "scripts": {
    "build": "rm -rf dist || mkdir dist && yarn parcel build src/index.html --dist-dir dist"
  },
  "staticFiles": [
    {
      "distPath": "dist",
      "staticOutPath": ".",
      "staticPath": "src/_static"
    },
    {
      "distPath": "dist",
      "staticOutPath": ".well-known",
      "staticPath": "src/_well-known"
    }
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ]
  },
  "devDependencies": {
    "@parcel/config-default": "^2.11.0",
    "@parcel/core": "^2.11.0",
    "@parcel/optimizer-image": "^2.11.0",
    "@parcel/optimizer-svgo": "^2.11.0",
    "@parcel/optimizer-terser": "^2.11.0",
    "@parcel/transformer-sass": "^2.11.0",
    "@parcel/transformer-typescript-tsc": "^2.11.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/eslint": "^8.56.2",
    "@types/jquery": "^3.5.29",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "parcel": "^2.11.0",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "tailwindcss": "^3.4.1",
    "ts-standard": "^12.0.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-pro": "^6.5.1",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/sharp-light-svg-icons": "^6.5.1",
    "jquery": "^3.7.1"
  }
}

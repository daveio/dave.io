{
	"name": "dave.io",
	"version": "0.1.0",
	"private": true,
	"description": "personal site for Dave Williams",
	"repository": "https://github.com/daveio/dave.io.git",
	"license": "MIT",
	"author": "Dave Williams <dave@dave.io>",
	"type": "module",
	"scripts": {
		"build": "run-p type-check \"build-only {@}\" --",
		"build-only": "vite build",
		"deploy": "pnpm run build && wrangler pages deploy ./dist",
		"dev": "vite",
		"format": "prettier --write src/",
		"lint": "run-s lint:*",
		"lint:eslint": "eslint . --fix",
		"lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
		"preview": "pnpm run build && wrangler pages dev ./dist",
		"test:e2e": "nightwatch tests/e2e/*",
		"test:unit": "vitest",
		"type-check": "vue-tsc --build --force"
	},
	"dependencies": {
		"flowbite": "^2.5.2",
		"pinia": "^2.3.0",
		"vue": "^3.5.13",
		"vue-router": "^4.5.0"
	},

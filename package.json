{
  "author": "Dave Williams <dave@dave.io>",
  "browserslist": "> 1%, last 2 versions, not dead",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-brands-svg-icons": "^6.2.1",
    "@fortawesome/pro-solid-svg-icons": "^6.2.1",
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.2.3",
    "jquery": "^3.6.3"
  },
  "description": "dave.io codebase",
  "devDependencies": {
    "@parcel/core": "^2.8.3",
    "@parcel/optimizer-svgo": "^2.8.3",
    "@parcel/optimizer-terser": "^2.8.3",
    "@parcel/transformer-sass": "2.8.3",
    "@parcel/transformer-typescript-tsc": "^2.8.3",
    "@types/bootstrap": "^5.2.6",
    "@types/jquery": "^3.5.16",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "parcel": "^2.8.3",
    "parcel-reporter-static-files-copy": "^1.5.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "ts-standard": "^12.0.2",
    "typescript": "^4.9.4"
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "jsx": true
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "standard-with-typescript"
    ],
    "globals": {
      "document": true,
      "navigator": true,
      "window": true
    },
    "ignorePatterns": [
      "tmp/**"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "project": "./tsconfig.json",
      "sourceType": "module"
    }
  },
  "license": "All Rights Reserved",
  "name": "dave.io",
  "prettier": {
    "overrides": [],
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "private": true,
  "repository": "https://github.com/daveio/dave.io",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && yarn parcel build src/index.html --dist-dir dist"
  },
  "staticFiles": [
    {
      "distPath": "dist",
      "staticOutPath": ".",
      "staticPath": "src/_static"
    },
    {
      "distPath": "dist",
      "staticOutPath": ".well-known",
      "staticPath": "src/_well-known"
    }
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ]
  },
  "version": "1.0.0"
}

{
  "name": "dave.io",
  "version": "^1.0.2",
  "private": true,
  "description": "personal site for Dave Williams",
  "repository": "https://github.com/daveio/dave.io.git",
  "license": "MIT",
  "author": {
    "name": "Dave Williams",
    "email": "dave@dave.io",
    "url": "https://dave.io"
  },
  "type": "module",
  "scripts": {
    "build": "bun run type-check && bun run build-only",
    "build-only": "bun run vite build",
    "deploy": "bun run build && bun run wrangler pages deploy ./dist",
    "dev": "bun run vite",
    "format": "bun run prettier --write src/",
    "lint": "bun run lint:eslint && bun run lint:oxlint",
    "lint:eslint": "bun exec eslint . --fix",
    "lint:oxlint": "bun run oxlint . --fix -D correctness --ignore-path .gitignore",
    "preview": "bun run build && bun run wrangler pages dev ./dist",
    "test:e2e": "bun run nightwatch tests/e2e/*",
    "test:unit": "bun run vitest",
    "type-check": "bun run vue-tsc --build"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.6",
    "autoprefixer": "^10.4.21",
    "pinia": "^3.0.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.6",
    "vue": "^3.5.14",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@iconify/json": "^2.2.338",
    "@nightwatch/vue": "^3.1.2",
    "@pinegrow/vite-plugin": "^3.0.69",
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.18",
    "@unocss/preset-icons": "^66.1.2",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/eslint-plugin": "^1.1.44",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "chromedriver": "^136.0.2",
    "eslint": "^9.26.0",
    "eslint-plugin-oxlint": "^0.16.10",
    "eslint-plugin-vue": "^10.1.0",
    "geckodriver": "^5.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "nightwatch": "^3.12.1",
    "npm-run-all2": "^8.0.1",
    "oxlint": "^0.16.10",
    "prettier": "^3.5.3",
    "stylelint": "^16.19.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^38.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "unocss": "^66.1.2",
    "unplugin-auto-import": "^19.2.0",
    "unplugin-vue-components": "^28.5.0",
    "vite": "^6.3.5",
    "vite-plugin-nightwatch": "^0.4.6",
    "vite-plugin-vue-devtools": "^7.7.6",
    "vitest": "^3.1.3",
    "vue-tsc": "^2.2.10",
    "wrangler": "^4.15.1"
  },
  "packageManager": "bun@1.2.13",
  "engines": {
    "bun": "~1.2.13",
    "node": "~23.11.0"
  },
  "trustedDependencies": ["@biomejs/biome", "@nightwatch/nightwatch-inspector", "@tailwindcss/oxide"]
}
